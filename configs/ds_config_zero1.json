{
    "train_batch_size": 256,
    "gradient_accumulation_steps": 2,
    "optimizer": {
        "type": "Adam",
        "params": {
        "lr": 1e-5
        },
        "eps": 1e-8,
        "weight_decay": 1e-2
    },
    "gradient_clipping": 1.0,
    "fp16": {
        "enabled": false
    },
    "zero_optimization": {
        "stage": 1,
        "reduce_bucket_size": 5e8,
        "allgather_bucket_size": 5e8
    },
    "amp": {
        "enabled": false
    }
}
